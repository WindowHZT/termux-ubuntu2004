_update(){
	msg $red "æ›´æ–°ubuntuè„šæœ¬"
	echo -e "\n\t$green------------------------------$white"
	echo -e "\t$red ubuntuè„šæœ¬è¿­ä»£æ›´æ–°ä¿¡æ¯$white"
	echo -e "\t (1)ubuntu 1.0 æœ€åˆä»£è„šæœ¬$white"
	echo -e "\t (2)ubuntu 1.5 $redï¼ˆå½“å‰ç‰ˆæœ¬ï¼‰$white"
	echo -e "\t     â—æ·»åŠ _è½¯ä»¶å®‰è£…_åŠŸèƒ½$white"
	echo -e "\t     â—æ·»åŠ _æ¡Œé¢ç¾åŒ–_åŠŸèƒ½$white"
	echo -e "\t$green------------------------------$white"
	echo -e "\n\n\tä½œè€…ä¸å®šæ—¶æ›´æ–°è„šæœ¬ï¼Œå¦‚æƒ³ä½“éªŒæ–°åŠŸèƒ½ï¼Œæ›´æ–°ubuntuè„šæœ¬å³å¯ä½“éªŒï¼"
	enter
	
	wget -c "https://raw.githubusercontent.com/WindowHZT/termux-ubuntu2004/main/usr/ubuntu" -O "/tmp/ubuntu"
	mv /tmp/ubuntu /usr/local/bin/ubuntu
	chmod +x /usr/local/bin/ubuntu
	msg $green "æ›´æ–°å®Œæ¯•ï½"
	enter
	exit
}

_clear(){
	msg $red "è¿™ä»…ä»…æ˜¯æ¸…ç†è„šæœ¬äº§ç”Ÿçš„åƒåœ¾ï¼Œè¯·æ‚‰çŸ¥ï¼"
	enter
	echo -e "$yellowæ¸…ç†å®‰è£…åŒ….$white"
	rm -rf /opt/eclipse.tar.gz /opt/ideaIC-2022.2.tar.gz /opt/ideaIU-2022.2.tar.gz ~/Downloads/VScode.deb /opt/android-studio.tar.gz  /opt/ttf.tar.xz  /opt/wps.deb
	
	echo -e "\n$yellowæ¸…ç†ç¾åŒ–åŒ…..$white"	
	rm -rf /tmp/.icons/* /tmp/.themes/* /tmp/icons/*
	
	echo -e "\n$yellowä¿ç•™ç”¨æˆ·é…ç½®ï¼Œæ¸…é™¤å¤šä½™èµ„æºåŒ…...$white"
	bg_name=`xfconf-query -c xfce4-desktop -p /backdrop/screen0/monitorVNC-0/workspace0/last-image | awk -F '/' '{print $NF}'`
	themes_name=`xfconf-query -c xsettings -p /Net/ThemeName`
	icons_name=`xfconf-query -c xsettings -p /Net/IconThemeName`
	mouse_name=`xfconf-query -c xsettings -p /Gtk/CursorThemeName`
	
	echo -e "\t|$greenç”¨æˆ·èƒŒæ™¯å›¾ï¼š$bg_name$white"
	echo -e "\t|$greenç”¨æˆ·ä¸»é¢˜ï¼š$themes_name$white"
	echo -e "\t|$greenç”¨æˆ·å›¾æ ‡ï¼š$icons_name$white"
	echo -e "\t|$greenç”¨æˆ·å…‰æ ‡ï¼š$mouse_name$white"
	
	##æ¸…ç†èƒŒæ™¯å›¾
	cd /tmp/bg >/dev/null 2>&1
	for x in `ls`
	do
		[ "$x" == "$bg_name" ]&&continue
		[ -e "/tmp/bg/$x" ]&&sudo rm -rf /tmp/bg/$x
	done
	
	##æ¸…ç†ä¸»é¢˜
	cd ~/.themes >/dev/null 2>&1
	for x in `ls -d */ | sed "s#/##g"`
	do
		[ "$x" == "$themes_name" ]&&continue
		sudo rm -rf $x >/dev/null 2>&1
		sudo rm -rf $x/ >/dev/null 2>&1
	done

	##æ¸…ç†å›¾æ ‡
	cd ~/.local/share/icons >/dev/null 2>&1
	for x in `ls -d */ | sed "s#/##g"`
	do
		[ "$x" == "$icons_name" ]&&continue
		sudo rm -rf $x >/dev/null 2>&1
		sudo rm -rf $x/ >/dev/null 2>&1
	done
		
	##æ¸…ç†å…‰æ ‡
	cd ~/.icons  >/dev/null 2>&1
	for x in `ls -d */ | sed "s#/##g"`
	do
		[ "$x" == "$mouse_name" ]&&continue
		sudo rm -rf $x >/dev/null 2>&1
		sudo rm -rf $x/ >/dev/null 2>&1
	done
	
	cd ~
	echo -e "\n$greenæ¸…ç†å®Œæ¯•ï½....$white"
	enter
}

_dialog(){
	export LC_ALL="zh_CN.UTF-8"
	export PORT=1
	
	dialog --clear \
		--backtitle "$1" \
		--title "@å‚(â€¢Ì€âŒ„â€¢Ì)èŠœæ¹–èµ·é£" \
	 	--nocancel \
	 	--menu "$2" 20 40 8 \
		"${OPTIONS[@]}" \
	 	2>/tmp/menu
	 	
	 	export op=`cat /tmp/menu`
}



_Main(){
	OPTIONS=(
         1 "å®‰è£…/å¸è½½è½¯ä»¶"
         2 "æ¡Œé¢ç¾åŒ–"
         3 "æ›´æ¢è¯­è¨€"
         #4 "ç¾åŒ–ç»ˆç«¯"  ##sh -c "$(curl -fsSL https://gitee.com/mirrors/oh-my-zsh/raw/master/tools/install.sh)"
         4 "xrdp DRè¿œç¨‹æ¡Œé¢"
         5 "vnc ä¿¡æ¯"
         6 "ç‰ˆæœ¬ä¿¡æ¯"
         7 "æ›´æ–°ubuntuè„šæœ¬"
         8 "æ¸…ç†åƒåœ¾"
         9 "å…³æœºï½"
         10 "é€€å‡º")
    
    _dialog "é¦–é¡µ" "ä½¿ç”¨â†‘â†“é€‰æ‹©ï¼Œä¹Ÿå¯ä»¥ç”¨æ‰‹ç‚¹å‡»é€‰é¡¹å†å›è½¦å“¦" $OPTIONS
	
    case $op in 
    	1)
    		_app
    		;;
    	2)
    		_theme
    		;;
    	3)
    		_language
    		;;
    	4)
    		_xrdp
    		;;
    	5)
    		clear
    		vnc
    		enter
    		;;
    	6)
    		msg $red "ubuntuè®¾å¤‡ä¿¡æ¯"
			echo -e "$green----------------ç‰ˆæœ¬-----------------$white"
			lsb_release -a
			echo -e "$green----------------ç£ç›˜-----------------$white"
			df -hl
			_other
    		enter
    		;;
    	7)
    		_update
    		;;
    	8)
    		_clear
    		;;
    	9)
    		logout
    		;;
    	*)
    		clear
    		export s=1
    		;;
esac
}

while :
do
	if [ "$s" == "0" ];then
		_Main
	else
		break
	fi
done







