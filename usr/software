_app(){
	_browser(){
		OPTIONS=(
 	         1 "Cchromium浏览器"
	         2 "火狐firefox浏览器"
	         3 "取消")
	
		_dialog "首页→安装/卸载软件→浏览器" "请选择" $OPTIONS

		case $op in
	    	1)
	    		_chromium
 		   		;;
	    	2)
	    		_firefox
	    		;;
	    	*)
	    		return
	    	;;
		esac
	}
	
	_development(){	
		OPTIONS=(
 	         1 "IntelliJ IDEA"
	         2 "VSCode"
	         3 "Eclipse"
	         4 "Android Studio"
	         5 "PyCharm"
	         6 "取消")
	
		_dialog "首页→安装/卸载软件→开发" "请选择" $OPTIONS

		case $op in
	    	1)
	    		_idea
	    		;;
	    	2)
	    		_vscode
	    		;;
	    	3)
	    		_eclipse
	    		;;
	    	4)
	    		_android-studio
	    		;;
	    	5)
	    		_pycharm
	    		;;    		
	    	*)
	    		return
	    	;;
		esac
	}
	
	_office(){
		OPTIONS=(
 	        1 "WPS office"
	         2 "取消")
		
		_dialog "首页→安装/卸载软件→办公" "请选择" $OPTIONS
	
		case $op in
	    	1)
 	 	  		_wps
  	 	 		;;    		
    		*)
    			return
	    	;;
		esac
	}
	
	OPTIONS=(
         1 "浏览器 (firefox、Chromium…)"
         2 "开发 (IDEA、PyCharm、VScode…)"
         3 "办公 (WPS…)"
         4 "取消")
	
	_dialog "首页→安装/卸载软件" "请选择" $OPTIONS

	case $op in
    	1)
    		_browser
    		;;
    	2)
    		_development
    		;;
    	3)
    		_office
    		;;
    	*)
    		return
    	;;
	esac
}
