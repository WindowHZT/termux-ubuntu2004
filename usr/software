		sed -i "s#`cat $CONFIG | grep "TheInputMethod=" `#TheInputMethod=1#g" $CONFIG
		
		msg $green "安装完毕～"
		echo -e "\n\n\t$red重启生效！$white"
		echo -e "\n\n\t$red如果因网络波动没有安装成功的，请卸载重装！$white"
		enter
	}
	
	_d(){
		msg $red "卸载小企鹅输入法"
		sudo apt purge fcitx-pinyin -y
		sudo apt remove fcitx-pinyin -y
		msg $green "卸载完毕～"
		enter
	}
	
	OPTIONS=(
         1 "安装小企鹅输入法"
         2 "卸载小企鹅输入法"
         3 "取消")
    
    _dialog "首页→安装/卸载软件→小企鹅输入法" "请选择" $OPTIONS

	case $op in
    	1)
    		_i
    		;;
    	2)
    		_d
    		;;
    	*)
    		return
    		;;
	esac
}

#------------------------------------------------Google输入法------------------------------------------------------------------------------------------------
#------------------------------------------------------------------------------------------------------------------------------------------------
_googlepinyin(){
	_i(){
		msg $red "安装Google输入法"
		[ -z "`dpkg -l | grep fcitx-googlepinyin`" ]&&sudo apt install fcitx-googlepinyin -y
		row=`cat ~/.config/fcitx/profile | grep -n EnabledIMList | awk -F ":" '{print $1}'`
		sed -i "$row"d ~/.config/fcitx/profile
