		echo -e "\n$greenè¯·ä¿æŒç½‘ç»œé€šç•…$white"
		wget -c https://r3---sn-j5o76n7z.gvt1.com/edgedl/android/studio/ide-zips/2021.2.1.16/android-studio-2021.2.1.16-linux.tar.gz -O /opt/android-studio.tar.gz
		
		#Input Method Configuration
		sudo apt purge fcitx-ui-qimpanel -y
		sudo dpkg -i /tmp/sogo.deb
		sudo apt install libqt5qml5 libqt5quick5 libqt5quickwidgets5 qml-module-qtquick2 -y
		sudo apt install libgsettings-qt1 -y
		sudo apt install -f 
		
		msg $green "å®‰è£…å®Œæ¯•ï½"
		echo -e "\n\n\t$redå¦‚æœå› ç½‘ç»œæ³¢åŠ¨æ²¡æœ‰å®‰è£…æˆåŠŸçš„ï¼Œè¯·å¸è½½é‡è£…ï¼$white"
		enter
	}
	
	_d(){
		msg $red "å¸è½½æœç‹—è¾“å…¥æ³•"
		
		sudo dpkg -r sogoupinyin
		msg $green "å¸è½½å®Œæ¯•ï½"
		enter
	}
	
	OPTIONS=(
         1 "å®‰è£…æœç‹—è¾“å…¥æ³•"
         2 "å¸è½½æœç‹—è¾“å…¥æ³•"
         3 "å–æ¶ˆ")
    
    _dialog "é¦–é¡µâ†’å®‰è£…/å¸è½½è½¯ä»¶â†’æœç‹—è¾“å…¥æ³•" "è¯·é€‰æ‹©" $OPTIONS

