		msg $green "安装完毕～"
		echo -e "\n\n\t$red重启生效！$white"
		echo -e "\n\n\t$red如果因网络波动没有安装成功的，请卸载重装！$white"
		enter
	}
	
	_d(){
		msg $red "卸载Google输入法"
		sudo apt purge fcitx-googlepinyin -y
		sudo apt remove fcitx-googlepinyin -y
		msg $green "卸载完毕～"
		enter
	}
	
	OPTIONS=(
         1 "安装Google输入法"
         2 "卸载Google输入法"
         3 "取消")
    
    _dialog "首页→安装/卸载软件→Google输入法" "请选择" $OPTIONS

	case $op in
    	1)
    		_i
    		;;
    	2)
    		_d
    		;;
    	*)
    		return
    		;;
	esac
}




#------------------------------------------------🍎安装/卸载软件🍎------------------------------------------------------------------------------------------------
#------------------------------------------------------------------------------------------------------------------------------------------------
##PS：友情提示，会继写的小伙伴也可以直接添加软件的安装代码进来哦！
_app(){
	##浏览器
	_browser(){
		OPTIONS=(
 	         1 "Cchromium浏览器"
	         2 "火狐firefox浏览器"
	         3 "取消")
	
		_dialog "首页→安装/卸载软件→浏览器" "请选择" $OPTIONS

		case $op in
	    	1)
	    		_chromium
 		   		;;
	    	2)
	    		_firefox
	    		;;
	    	*)
	    		return
	    	;;
		esac
	}
	
	##开发工具
	_development(){	
		OPTIONS=(
 	         1 "IntelliJ IDEA"
	         2 "VSCode"
	         3 "Eclipse"
	         4 "Android Studio"
	         5 "PyCharm"
	         6 "取消")
	
		_dialog "首页→安装/卸载软件→开发" "请选择" $OPTIONS

		case $op in
	    	1)
	    		_idea
	    		;;
	    	2)
	    		_vscode
	    		;;
	    	3)
	    		_eclipse
	    		;;
	    	4)
	    		_android-studio
	    		;;
	    	5)
	    		_pycharm
	    		;;    		
	    	*)
	    		return
	    	;;
		esac
	}
	
	##办公软件
	_office(){
		OPTIONS=(
 	        1 "WPS office"
	         2 "取消")
		
		_dialog "首页→安装/卸载软件→办公" "请选择" $OPTIONS
	
		case $op in
	    	1)
 	 	  		_wps
  	 	 		;;    		
    		*)
    			return
	    	;;
		esac
	}
	
	##输入法
	_the_input_method(){
		OPTIONS=(
 	        1 "小企鹅拼音"
	        2 "Google拼音"
	        3 "搜狗输入法"
	        4 "取消")
		
		_dialog "首页→安装/卸载软件→中文输入法" "请选择" $OPTIONS
	
		case $op in
	    	1)
 	 	  		_penguinpinyin
  	 	 		;; 
	    	2)
 	 	  		_googlepinyin
  	 	 		;; 
	    	3)
	    		echo "$red功能测试中ing，暂时无法使用$white"
	    		enter
	    		return
 	 	  		_sougoupinyin
  	 	 		;; 
    		*)
    			return
	    	;;
		esac	
	}
	
	##主选项
	OPTIONS=(
         1 "浏览器 (firefox、Chromium…)"
         2 "开发 (IDEA、PyCharm、VScode…)"
         3 "办公 (WPS…)"
         4 "中文输入法 (小企鹅、Google…)"
         5 "取消")
	
	_dialog "首页→安装/卸载软件" "请选择" $OPTIONS

	case $op in
    	1)
    		_browser
    		;;
    	2)
    		_development
    		;;
    	3)
    		_office
    		;;
    	4)
    		_the_input_method
    		;;
    	*)
    		return
    	;;
	esac
}
