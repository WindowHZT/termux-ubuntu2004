	_d(){
		if [ "$1" == 1 ];then
			msg $red "å¸è½½PyCharmå…è´¹ç‰ˆ"
			rm -rf /opt/pycharm-community ~/Desktop/pycharm-community.desktop
		else
			msg $red "å¸è½½PyCharmä»˜è´¹ç‰ˆ"
			rm -rf /opt/pycharm-professional ~/Desktop/pycharm-professional.desktop
		fi
		
		msg $green "å¸è½½å®Œæ¯•ï½"
		enter
	}
	
	OPTIONS=(
         1 "å®‰è£…PyCharm"
         2 "å¸è½½PyCharm"
         3 "å–æ¶ˆ")
    
    _dialog "é¦–é¡µâ†’å®‰è£…/å¸è½½è½¯ä»¶â†’å¼€å‘â†’PyCharm" "è¯·é€‰æ‹©" $OPTIONS

	case $op in
    	1)
    		OPTIONS=(
	        1 "ç¤¾åŒºç‰ˆCommunity_å…è´¹"
 	        2 "ä¸“ä¸šç‰ˆProfessional_ä»˜è´¹"
  		    3 "å–æ¶ˆ")
			
			_dialog "é¦–é¡µâ†’å®‰è£…è½¯ä»¶â†’å¼€å‘â†’PyCharm" "è¯·é€‰æ‹©" $OPTIONS
			
			case $op in
		    	1)
  			  		_i 1
    				;;
		    	2)
		    		_i 2
 			  		;;
    			*)
    				return
	    		;;
			esac
    		;;
    	2)
    		OPTIONS=(
	        1 "ç¤¾åŒºç‰ˆCommunity_å…è´¹"
 	        2 "ä¸“ä¸šç‰ˆProfessional_ä»˜è´¹"
  		    3 "å–æ¶ˆ")
			
			_dialog "é¦–é¡µâ†’å¸è½½è½¯ä»¶â†’å¼€å‘â†’PyCharm" "è¯·é€‰æ‹©" $OPTIONS
			
