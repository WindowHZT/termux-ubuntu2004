#------------------------------------------------PyCharm------------------------------------------------------------------------------------------------
#------------------------------------------------------------------------------------------------------------------------------------------------
_pycharm(){
	_i(){
		cd /opt
		if [ "$1" == "1" ];then
			pycharm="pycharm-community"
		else
			pycharm="pycharm-professional"
		fi
			if [ -d "/opt/$pycharm" ];then
				OPTIONS=(
	        	1 "æ˜¯"
        		2 "å¦")
        		
    			_dialog "é¦–é¡µâ†’å®‰è£…è½¯ä»¶â†’å¼€å‘â†’PyCharm" "æ£€æµ‹åˆ°ä½ ä¹‹å‰å·²ç»å®‰è£…è¿‡$pycharmç‰ˆï¼Œæ˜¯å¦å¸è½½é‡è£…ï¼Ÿ" $OPTIONS
				case $op in
    				1)
			    		rm -rf "/opt/$pycharm"
   				 		;;
			    	*)
			    		return
			    		;;
				esac
			fi

