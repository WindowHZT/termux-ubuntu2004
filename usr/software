#------------------------------------------------Visual Studio Code------------------------------------------------------------------------------------------------
#------------------------------------------------------------------------------------------------------------------------------------------------
_vscode(){
	
	
	
	_i(){
		msg $red "å®‰è£…Visual Studio Code"
		wget -c https://az764295.vo.msecnd.net/stable/784b0177c56c607789f9638da7b6bf3230d47a8c/code_1.71.0-1662017130_arm64.deb -O ~/Downloads/VScode.deb
		sudo dpkg -i ~/Downloads/VScode.deb
		sudo apt --fix-broken install -y
		
		cat<<-EOF > ~/Desktop/VScode.desktop
		[Desktop Entry]
		Name=Visual Studio Code
		Comment=Multi-platform code editor for Linux
		Exec=/usr/share/code/bin/code --user-data-dir=~/.vscode --no-sandbox .
		Icon=/usr/share/code/resources/app/resources/linux/code.png
		Type=Application
		StartupNotify=true
		Categories=TextEditor;Development;Utility;
		MimeType=text/plain;
		EOF

		chmod +x ~/Desktop/VScode.desktop
		sed -i 's#Exec=/usr/share/code/code --unity-launch %F#Exec=/usr/share/code/bin/code --user-data-dir=~/.vscode --no-sandbox .#g' /usr/share/applications/code.desktop
		msg $green "å®‰è£…å®Œæ¯•ï½"
		echo -e "\n\n\t$redå¦‚æœå› ç½‘ç»œæ³¢åŠ¨æ²¡æœ‰å®‰è£…æˆåŠŸçš„ï¼Œè¯·å¸è½½é‡è£…ï¼$white"
		enter
	}
	
	_d(){
		msg $red "å¸è½½Visual Studio Code"
		sudo dpkg -r code
		
		rm -rf ~/Desktop/VScode.desktop
		msg $green "å¸è½½å®Œæ¯•ï½"
		enter
	}
	
	OPTIONS=(
         1 "å®‰è£…Visual Studio Code"
         2 "å¸è½½Visual Studio Code"
         3 "å–æ¶ˆ")
    
    _dialog "é¦–é¡µâ†’å®‰è£…/å¸è½½è½¯ä»¶â†’å¼€å‘â†’Visual Studio Code" "è¯·é€‰æ‹©" $OPTIONS

	case $op in
    	1)
    		_i
    		;;
    	2)
    		_d
    		;;
    	*)
    		return
    		;;
	esac


}

#------------------------------------------------Eclipse------------------------------------------------------------------------------------------------
#------------------------------------------------------------------------------------------------------------------------------------------------
_eclipse(){
	
	_i(){
		case `dpkg --print-architecture` in
		arm64 | aarch64)
			#archurl="arm64"
			msg $red "æ£€æµ‹åˆ°ä½ çš„ç³»ç»Ÿæ„æ¶ä¸ºarm64ï¼Œå¼€å§‹å®‰è£…Eclipse"
			wget -c https://mirrors.nju.edu.cn/eclipse//technology/epp/downloads/release/2022-06/R/eclipse-java-2022-06-R-linux-gtk-aarch64.tar.gz -O /opt/eclipse.tar.gz
			;;
		x86_64 | amd64)
			#archurl="amd64"
			msg $red "æ£€æµ‹åˆ°ä½ çš„ç³»ç»Ÿæ„æ¶ä¸ºamd64ï¼Œå¼€å§‹å®‰è£…Eclipse"
			wget -c https://mirrors.neusoft.edu.cn/eclipse/oomph/epp/2022-06/R/eclipse-inst-jre-linux64.tar.gz -O /opt/eclipse.tar.gz
			;;	
		*)
			echo "æœªçŸ¥æ„æ¶ï¼Œæ— æ³•å®‰è£…ï¼";enter; return ;;
		esac
		
		tar -zxvf /opt/eclipse.tar.gz -C /opt/
		
		cat<<-EOF > ~/Desktop/eclipse.desktop
		[Desktop Entry]
		Enncooding=UTF-8
		Name=eclipse
		Comment=Eclipse
		Exec=/opt/eclipse/eclipse
		Icon=/opt/eclipse/icon.xpm
		Terminal=false
		StartupNotify=true
		Type=Application
		Categories=Application;Development;
		EOF

		chmod +x ~/Desktop/eclipse.desktop
		msg $green "å®‰è£…å®Œæ¯•ï½"
		echo -e "\n\n\t$redå¦‚æœå› ç½‘ç»œæ³¢åŠ¨æ²¡æœ‰å®‰è£…æˆåŠŸçš„ï¼Œè¯·å¸è½½é‡è£…ï¼$white"
		enter
	}
	
	_d(){
		msg $red "å¸è½½Eclipse"
		
		rm -rf ~/Desktop/eclipse.desktop /opt/eclipse
		msg $green "å¸è½½å®Œæ¯•ï½"
		enter
	}
	
	OPTIONS=(
         1 "å®‰è£…Eclipse"
         2 "å¸è½½Eclipse"
         3 "å–æ¶ˆ")
    
    _dialog "é¦–é¡µâ†’å®‰è£…/å¸è½½è½¯ä»¶â†’å¼€å‘â†’Eclipse" "è¯·é€‰æ‹©" $OPTIONS

	case $op in
    	1)
    		_i
    		;;
    	2)
    		_d
    		;;
    	*)
    		return
    		;;
	esac


}


#------------------------------------------------WPS------------------------------------------------------------------------------------------------
#------------------------------------------------------------------------------------------------------------------------------------------------
_wps(){
	_i(){
		if [ -d "/opt/kingsoft" ];then
			clear
			echo -e "$redæœ¬æœºå·²å®‰è£…æœ‰WPSï¼Œå¦‚æƒ³é‡æ–°å®‰è£…ï¼Œè¯·å…ˆå¸è½½ä¸€é$white"
			enter
			return
		fi
		msg $red "å®‰è£…WPSï¼ˆæœ¬æ¬¡ä¸‹è½½å¯ä»¥ä¸ç”¨åŠ é€Ÿå™¨ï¼ï¼‰"
		echo -e "\n$greenè¯·ä¿æŒç½‘ç»œé€šç•…$white"
		wget -c https://wps-linux-personal.wpscdn.cn/wps/download/ep/Linux2019/11664/wps-office_11.1.0.11664_arm64.deb -O /opt/wps.deb
		[ "$?" == "0" ]&& rm -rf "/usr/share/mime/packages/custom-wps-office.xml"&&sudo dpkg -i  /opt/wps.deb
		
		wget -c https://gitee.com/ak2/ttf-wps-fonts/raw/master/ttf-wps-fonts.tar.xz -O /opt/ttf.tar.xz
		tar -Jxvf ttf.tar.xz -C /
		cd /usr/share/fonts/truetype/wps-fonts
	    for i in mkfontscale mkfontdir fc-cache; do
 	       [[ ! $(command -v ${i}) ]] ||sudo  ${i}
  		done
		
		sed -i '2{s/^/export LANGUAGE="zh_CN:zh"/}' /usr/bin/wps
		sed -i '2{s/^/export LANGUAGE="zh_CN:zh"/}' /usr/bin/wpspdf
		sed -i '2{s/^/export LANGUAGE="zh_CN:zh"/}' /usr/bin/et
		sed -i '2{s/^/export LANGUAGE="zh_CN:zh"/}' /usr/bin/wpp
		msg $green "å®‰è£…å®Œæ¯•ï½"
		echo -e "\n\n\t$redå¦‚æœå› ç½‘ç»œæ³¢åŠ¨æ²¡æœ‰å®‰è£…æˆåŠŸçš„ï¼Œè¯·å¸è½½é‡è£…ï¼$white"
		enter
	}
	
	_d(){
		msg $red "å¸è½½WPS"
		
		sudo dpkg -r wps-office
		msg $green "å¸è½½å®Œæ¯•ï½"
		enter
	}
	
	OPTIONS=(
         1 "å®‰è£…WPS"
         2 "å¸è½½WPS"
         3 "å–æ¶ˆ")
    
    _dialog "é¦–é¡µâ†’å®‰è£…/å¸è½½è½¯ä»¶â†’åŠå…¬â†’WPS" "è¯·é€‰æ‹©" $OPTIONS

	case $op in
    	1)
    		_i
    		;;
    	2)
    		_d
    		;;
    	*)
    		return
    		;;
	esac


}


