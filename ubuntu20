	mkdir -p "$folder"
	cd "$folder"
	msg $red "è§£å‹Rootfsï¼Œè¯·è€å¿ƒç­‰å¾…ã€‚"
	proot --link2symlink tar -xf ${cur}/${tarball} --exclude=dev||:
	cd "$cur"
fi


