		case `dpkg --print-architecture` in
		aarch64)
			archurl="arm64" ;;
		arm)
			archurl="armhf" ;;
		x86_64 | amd64)
			archurl="amd64" ;;	
		*)
			echo "æœªçŸ¥æ„æ¶"; exit 1 ;;
		esac
		while :
		do
			wget -c "https://github.com/WindowHZT/termux-ubuntu2004/releases/download/ubuntu2004/focal-$archurl.tar.gz" -O ubuntu20-rootfs.tar.gz
