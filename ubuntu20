	first=1
	echo -e "\n$yellowæ£€æµ‹åˆ°$folderç›®å½•å­˜åœ¨ï¼$white"
	echo -e "\n$yellowå®ƒå¯èƒ½æ˜¯ä¸€ä¸ªå®Œæ•´çš„ç³»ç»Ÿæˆ–è€…å¸è½½æ®‹ç•™ï¼$white"
	echo "\nè„šæœ¬é€€å‡º"
